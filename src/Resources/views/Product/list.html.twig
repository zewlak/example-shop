<a href="{{ path('admin_new_product') }}">Add new products</a>

{# total items count #}
<div class="count">
    Total products: {{ pagination.getTotalItemCount }}
</div>
<table>
    <tr>
        {# sorting of properties based on query components #}
        <th>Id</th>
        <th>Name</th>
        <th>{{ knp_pagination_sortable(pagination, 'Price', 'price') }}</th>
    </tr>

    {# table body #}
    {% for article in pagination %}
        <tr {% if loop.index is odd %}class="color"{% endif %}>
            <td>{{ article.id }}</td>
            <td>{{ article.name }}</td>
            <td>{{ article.price }}</td>
        </tr>
    {% endfor %}
</table>
{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>